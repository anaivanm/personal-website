<div class="header d-flex justify-content-center">
  <div id="carouselExampleIndicators" class="carousel slide width-carousel" data-ride="carousel">
  <div class="my-5 text-center">
    <u><%= link_to project.name, project_path(project), class: 'navbar-link' %></u></div>
      <!-- Wrapper for slides -->
      <div class="carousel-inner carousel-border">
        <div class="carousel-item active">
          <%= image_tag project.photo, class: 'd-block w-100' %>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1502945015378-0e284ca1a5be?ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1519211975560-4ca611f5a72a?ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80">
        </div>
      </div>

      <!-- Controls -->
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="sr-only">Next</span>
      </a>
  </div>
</div>