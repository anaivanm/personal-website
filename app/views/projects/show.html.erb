<div class="container">
	<div class="header d-flex flex-column justify-content-between">
		<div id="carouselExampleIndicators" class="carousel slide carousel-width" data-ride="carousel">
			<!-- Wrapper for slides -->
			<div class="carousel-inner carousel-border">
				<div class="carousel-item active">
					<%= image_tag @project.photo, class: 'd-block w-100' %>
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="https://images.unsplash.com/photo-1502945015378-0e284ca1a5be?ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="https://images.unsplash.com/photo-1519211975560-4ca611f5a72a?ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80">
				</div>
			</div>

			<!-- Controls -->
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="sr-only">Next</span>
			</a>
		</div>
		<div class="carousel-width">
			<div class="header-h4"><%= @project.name %></div>
			<p><%= @project.description %></p>
			<%= link_to 'See project on Github', @project.git_url, class: 'navbar-link' %>
			<br>
			<%= link_to 'Visit website', @project.web_url, class: 'navbar-link' %>
		</div>
	</div>
</div>